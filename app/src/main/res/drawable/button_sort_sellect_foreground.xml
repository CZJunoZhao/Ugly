<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true" android:drawable="@null"
        >
        <shape android:shape="oval">
            <solid android:color="#00796B"></solid>
            <corners android:radius="360dp"/>
            <padding android:left="2dp"
                     android:bottom="2dp"
                     android:right="2dp"
                     android:top="2dp"
                />
            <stroke android:color="#00796B"
                    android:width="1dp"/>
            <size android:width="30dp"
                  android:height="30dp"
                />
        </shape>
    </item>

    <item android:state_checked="false"
          android:state_enabled="false" android:state_hovered="false"
        >
        <shape android:shape="oval">
            <solid android:color="@android:color/white"></solid>
            <corners android:radius="360dp"
                />
            <padding android:left="2dp"
                     android:bottom="2dp"
                     android:right="2dp"
                     android:top="2dp"
                />
            <stroke android:color="#727272"
                    android:width="1dp"/>
            <size android:width="30dp"
                  android:height="30dp"
                />
        </shape>
    </item>
</selector>